{
  "private": true,
  "scripts": {
    "build": "npm run build:gateway && npm run build:auth",
    "build:gateway": "cd gateway && mxpy contract build",
    "build:auth": "cd auth && mxpy contract build",
    "test": "vitest run",
    "test:contract": "cd gateway && cargo test",
    "test:all": "npm run build && npm run test && npm run test:contract",
    "typecheck": "tsc --noEmit",
    "interact:devnet": "CHAIN=devnet tsx interact/index.ts",
    "interact:testnet": "CHAIN=testnet tsx interact/index.ts",
    "interact:mainnet": "CHAIN=mainnet tsx interact/index.ts"
  },
  "devDependencies": {
    "@multiversx/sdk-core": "^12.5.0",
    "@multiversx/sdk-wallet": "^4.2.0",
    "@types/node": "^18.16.18",
    "commander": "11.0.0",
    "tsx": "^3.12.7",
    "typescript": "^5.0.4",
    "vitest": "^0.33.0",
    "xsuite": "0.0.28",
    "keccak": "^3.0.3"
  }
}
